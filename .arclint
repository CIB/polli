{
  "linters": {
    "cppcheck": {
      "include": "(include/polli/.+\\.h$|include/pprof/.+\\.h$|lib/.+\\.cpp$)",
      "type": "cppcheck"
    },
    "cpplint": {
      "include": "(include/polli/.+\\.h$|include/pprof/.+\\.h$|lib/.+\\.cpp$)",
      "type": "cpplint",
      "severity": {
        "runtime/int":            "advice",
        "whitespace/comments":    "advice",
        "whitespace/blank_line":  "advice"
      }
    },
    "chmod": {
      "type": "chmod"
    },
    "filename": {
      "exclude": "(www/experiments/.+|.*\\.jscop.*)",
      "type": "filename"
    },
    "merge-conflict": {
      "type": "merge-conflict"
    },
    "spelling": {
      "exclude": "(configure|autoconf/.*)",
      "type": "spelling"
    }
  }
}
